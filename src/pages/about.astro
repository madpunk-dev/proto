---
// src/pages/about.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import { COMPANY_INFO, SITE_CONFIG } from '../consts';

// JSON-LD
const structuredData = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": COMPANY_INFO.name,
  "url": COMPANY_INFO.url || `https://${SITE_CONFIG.domain}`,
  "email": COMPANY_INFO.email
});
---

<BaseLayout 
  pageTitle="About" 
  description="Organization information and operational details."
>
  <h1>Information</h1>
  
  <p>運営情報</p>

  <table>
    <tbody>
      <tr>
        <th>Name</th>
        <td>
          {COMPANY_INFO.url ? (
            <a href={COMPANY_INFO.url} target="_blank" rel="noopener noreferrer">
              {COMPANY_INFO.name} <span style="font-size: 0.8em;">↗</span>
            </a>
          ) : (
            COMPANY_INFO.name
          )}
        </td>
      </tr>
      <tr>
        <th>Location</th>
        <td>{COMPANY_INFO.address}</td>
      </tr>
      <tr>
        <th>Contact</th>
        <td><a href={`mailto:${COMPANY_INFO.email}`}>{COMPANY_INFO.email}</a></td>
      </tr>
       <tr>
        <th>Established</th> <td>{COMPANY_INFO.founded}</td>
      </tr>
    </tbody>
  </table>

  <script type="application/ld+json" set:html={structuredData} />
</BaseLayout>