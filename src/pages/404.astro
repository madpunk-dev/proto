---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  pageTitle="Not Found" 
  description="The requested page could not be found (404 Error)."
>
  <div style="text-align: center; margin-top: 5rem;">
    <h1 style="border: none; font-size: 4rem; margin-bottom: 0;">404</h1>
    <p style="color: var(--accent-color);">ERR_FILE_NOT_FOUND</p>
    
    <p style="margin: 2rem 0;">
      The requested resource is missing or has been moved to another sector.
    </p>

    <a href="/" class="btn-back">
      &lt; RETURN TO ROOT
    </a>
  </div>

  <style>
    .btn-back {
      border: 1px solid var(--text-color);
      padding: 0.5rem 1rem;
      transition: all 0.2s;
    }
    .btn-back:hover {
      background: var(--text-color);
      color: var(--bg-color);
      border-color: var(--text-color);
    }
  </style>
</BaseLayout>